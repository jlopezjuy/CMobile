<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="now" value="now()" dbms="h2"/>

    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle, mssql"/>

    <!--
        Added the entity Ciudadano.
    -->
    <changeSet id="20170621201128-1" author="jhipster">
        <createTable tableName="ciudadano">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="nombre" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="paterno" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="materno" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="email" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="fecha_nacimiento" type="date">
                <constraints nullable="true" />
            </column>

            <column name="telefono_movil" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="telefono_fijo" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="calle" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="numero" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="colonia" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="municipio" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="cp" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="genero" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="tipo_sanguineo" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="alergias" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="padecimientos" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="latitud" type="decimal(10,2)">
                <constraints nullable="true" />
            </column>

            <column name="longitud" type="decimal(10,2)">
                <constraints nullable="true" />
            </column>

            <column name="codigo_verificacion" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="estado" type="bit">
                <constraints nullable="true" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>

    </changeSet>
</databaseChangeLog>
